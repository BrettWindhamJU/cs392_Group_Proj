@model IEnumerable<cs392_demo.viewModels.StockInventoryViewModel>

@{
    ViewData["Title"] = "Stock Inventory";
}

<h2 class="mb-4">Stock Inventory List</h2>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Stock ID</th>
            <th>Item Name</th>
            <th>SKU</th>
            <th>Amount</th>
            <th>Danger Range</th>
            <th>Last Updated</th>
            <th>Location Name</th>
            <th>Address</th>
            <th>Owner</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var item in Model)
            {
                <tr class="@(item.Amount <= item.Danger_Range ? "table-danger" : "")">
                    <td>@item.Stock_ID</td>
                    <td>@item.Item_Name</td>
                    <td>@item.SKU</td>
                    <td>@item.Amount</td>
                    <td>@item.Danger_Range</td>
                    <td>@item.Last_Updated.ToString("yyyy-MM-dd HH:mm")</td>
                    <td>@item.Location_Name</td>
                    <td>@item.Address_Location</td>
                    <td>@item.Owner_User_ID</td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="9" class="text-center">No inventory records found.</td>
            </tr>
        }
    </tbody>
</table>
